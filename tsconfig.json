{
    "compilerOptions": {
      "lib": ["esnext", "esnext.asynciterable"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "target": "ESNext",
      "strict": true,
      "removeComments": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "outDir": "dist",
      "declaration": true,
      "skipLibCheck": true,
      "incremental": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["lib/**/*"],
    "exclude": ["dist/**"]
  }
